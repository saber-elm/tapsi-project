*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  /* list-style: none; */
}
/* root variable */
:root {
  --color-primary: #ff5722;
  --color-badgeprimary-badgesecondaryborder: #fe4e00;
  --color-btnsecondary-badgesecondary-light: #fff6f2;
  --color-secondary-medium: #ffa589;
  --color-btnsecondary-badgeprimaryborder-dark: #ff7a50;
  --color-navbar: #f8f8f8;
  --color-headings2: #000000;
  /* --color-headings3: #141414; */
  --color-body: #333333;
  --color-footer: #0b0d17;
  --color-white: #fff;
}

/* font configs */

html {
  font-size: 62.5%;
}

body {
  color: var(--color-body);
  font-size: 1.4rem;
}

h1,
h2,
h3 {
  color: var(--color-headings2);
}

h1 {
  font-size: 2.5rem;
}

h2 {
  font-size: 2.2rem;
}

@media screen and (min-width: 1024px) {
  body {
    font-size: 1.8rem;
  }
  h1 {
    font-size: 5rem;
  }
  h2 {
    font-size: 3.5rem;
  }
}

/* buttons */

.btn {
  cursor: pointer;
  outline: 0;
  border: 0;
  padding: 2rem 2.5rem;
  border-radius: 8px;
  margin: 1rem 0;
  text-align: center;
  white-space: nowarp;
  font-size: 1.4rem;
}
.btn--primary {
  background-color: var(--color-primary);
  color: var(--color-white);
}
.btn--secondary {
  background-color: var(--color-secondary-medium);
  color: var(--color-white);
}
.btn--block {
  width: 100%;
  font-size: 1.6rem;
}
@media screen and (min-width: 1024px) {
  .btn {
    font-size: 1.6rem;
  }
  .btn--block {
    font-size: 2rem;
  }
}

/* badges */
.badge {
  display: inline-block;
  padding: 0.5rem 1.3rem;
  background-color: var(--color-btnsecondary-badgesecondary-light);
  border-radius: 32px;
  border: 2px solid var(--color-badgeprimary-badgesecondaryborder);
  color: var(--color-primary);
  text-transform: uppercase;
  font-size: 1.2rem;
}
.badge-primary {
  font-size: 1.4rem;
  color: #fff;
  background-color: var(--color-badgeprimary-badgesecondaryborder);
  border-color: var(--color-btnsecondary-badgeprimaryborder-dark);
}

/* list component */
.list {
  list-style: none;
  font-size: 1.8rem;
}
.list--inline .list__item {
  display: inline-block;
  margin-left: 2rem;
}
